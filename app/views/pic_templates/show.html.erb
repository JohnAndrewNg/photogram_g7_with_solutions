<div class="container">
  <div class="col-md-6">


    <h1>Photo Details</h1>

    <img src="<%= @my_photo.source %>">

    <p>
      <%= @my_photo.caption %>
    </p>

    <p>
      <%= time_ago_in_words(@my_photo.created_at) %> ago
    </p>

    <a href="/photos" class="btn btn-default">Go back</a>
    <a href="/photos/<%= @my_photo.id %>/edit" class="btn btn-default">Edit</a>
    <a href="/delete_photo/<%= @my_photo.id %>" class="btn btn-default">Delete</a>

  </div>
</div>
